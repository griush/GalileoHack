<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    style="@style/Widget.Material3.CardView.Filled"
    android:clickable="false"
    android:focusable="false"
    android:checkable="false"
    app:cardCornerRadius="16dp"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    >

  <LinearLayout android:id="@+id/aa"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          android:paddingLeft="8dip"
          android:paddingRight="8dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/SatelliteNumberHeader"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0"
              android:text="@string/satellite"
              android:textSize="20sp"
              android:textStyle="normal" />

          <TextView
              android:id="@+id/SatelliteNumberDisplay"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="13"
              android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/FrequencyLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0"
              android:text="@string/frequency"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/FrequencyDisplay"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="420.69GHz" />

          <TextView
              android:id="@+id/SignalStrengthLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0"
              android:text="@string/snr"

              android:textStyle="bold" />

          <TextView
              android:id="@+id/SignalStrengthDisplay"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="-33.0dB"
   />

          <TextView
              android:id="@+id/textView8"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0"
              android:text="@string/agc"
              android:textAlignment="textEnd"

              android:textStyle="bold" />

          <TextView
              android:id="@+id/AGCDisplay"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="33 dB"
   />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/CN_0_Label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0"
              android:text="SNR "
              android:textAlignment="center"

              android:textSize="13sp"
              android:textStyle="bold" />

          <ProgressBar
              android:id="@+id/ProgressBarCN_0Display"
              style="?android:attr/progressBarStyleHorizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:indeterminate="false"
              android:indeterminateBehavior="repeat"
              android:max="50"
              android:maxHeight="48dip"
              android:minHeight="48dip"
              android:paddingLeft="4dip"
              android:paddingTop="2dip" />

        </LinearLayout>
      </LinearLayout>
    </LinearLayout>

  </LinearLayout>
</com.google.android.material.card.MaterialCardView>