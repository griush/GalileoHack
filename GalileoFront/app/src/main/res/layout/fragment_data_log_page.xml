<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DataLogPage">

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dip"
        app:cardCornerRadius="16dp"
        >

        <ScrollView
            android:id="@+id/DataLogScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/DataLogTextView"
            android:contentDescription="@string/raw_data_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_gravity="top"
            android:gravity="top"
            android:fontFamily="@font/monospace"
            android:padding="8dp"
            android:paddingHorizontal="16dp"
            android:hint="@string/no_data_yet__raw_data_page"
            android:isScrollContainer="true"
            android:textSize="14sp"
            android:autofillHints=""/>

        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>